.top-space
	= form_for @participant do |f|
		-if @participant.errors.any?
			#error_explanation
				%h2= "#{pluralize(@participant.errors.count, "error")} prohibited this participant from being saved:"
				%ul
					-@participant.errors.full_messages.each do |message|
						%li= message
		.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
			= f.label :nombre, class: "mdl-textfield__label grey-text"
			= f.text_field :nombre, autofocus: true, class: "mdl-textfield__input"
		.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
			= f.label :ocupacion, class: "mdl-textfield__label grey-text"
			= f.text_field :ocupacion, autofocus: true, class: "mdl-textfield__input"
		.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
			= f.label :interes, class: "mdl-textfield__label grey-text"
			= f.text_field :interes, autofocus: true, class: "mdl-textfield__input"
		.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
			= f.label :correo, class: "mdl-textfield__label grey-text"
			= f.text_field :correo, autofocus: true, class: "mdl-textfield__input"
		.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
			= f.label :telefono, class: "mdl-textfield__label grey-text"
			= f.text_field :telefono, autofocus: true, class: "mdl-textfield__input"
		.large-padding
			= f.submit 'Guardar', class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored"
